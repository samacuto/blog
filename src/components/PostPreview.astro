---
const { post } = Astro.props
---

<div
  class="dark:bg-dark-bg pointer-events-none invisible absolute top-full left-0 z-50 w-80 translate-y-2 rounded-md border border-gray-200 bg-white p-3 opacity-0 shadow-lg transition-all duration-500 ease-out group-hover:visible group-hover:translate-y-0 group-hover:opacity-100 dark:border-gray-700"
>
  {
    post.data.image && (
      <img
        src={post.data.image.src}
        alt={post.data.imageAlt || post.data.title}
        class="mb-2 h-32 w-full rounded object-cover"
      />
    )
  }

  <p class="text-sm text-gray-700 dark:text-gray-300">
    {post.data.description || ''}
  </p>
</div>
